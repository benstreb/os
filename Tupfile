ARCH = i386
ARCHDIR = kernel/arch/$(ARCH)
SYSROOT = kernel/
CFLAGS = -std=c11 -ffreestanding -O2 -Wall -Wextra -I $(SYSROOT)/include/
ifdef RUN_TESTS
ASFLAGS += -D RUN_TESTS
CFLAGS += -D RUN_TESTS
endif

cc = i686-elf-gcc
#cc = clang -target i386--elf

: $(ARCHDIR)/boot.S |> $(cc) -c %f $(ASFLAGS) |> %B.o {objs}
: foreach $(ARCHDIR)/*.c |> $(cc) -c %f $(CFLAGS) |> %B.o {objs}
: $(ARCHDIR)/linker.ld {objs} |> $(cc) -T %f -o %o -ffreestanding -O2 -nostdlib |> os.bin

